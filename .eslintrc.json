{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript",
    "prettier"
  ],
  "overrides": [{ "files": ["*.ts", "*.tsx"] }],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
