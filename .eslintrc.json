{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "tsconfig.json"
    ]
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "warn",
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
